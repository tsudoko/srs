#!/bin/rc
rfork ne

# final item names cannot contain spaces or tabs
# TODO: top-level $srs_dir (like GIT_DIR) (or maybe as first arg to all commands)

srsdir=$home/lib/srs

fn pending {
	awk -F'	' '
		BEGIN {
			"date -n" | getline now
			today = int(now/60/60/24)
		}
		{ if($2<=today) print; else exit }
	' $srsdir/_index
}

fn splitparams {
	item=$1
	scheduler=$3
	shift; shift; shift
	schedargs=$*
}

# this is ugly
while(ifs='
' {pending=`{pending}} && ! ~ $pending '') {
	for(i in $pending) {
		ifs='	' {i=`{echo $i} && splitparams $i}
		srs/show $item
		status=init
		while(! ~ $status '') {
			echo -n '> '
			score=`{read}
			if(! ~ $score '')
				srs/sched-$scheduler/rate $item $score $schedargs
		}
	}
}
