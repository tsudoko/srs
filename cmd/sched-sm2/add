#!/bin/rc

srsdir=$home/lib/srs
today=`{echo `{date -nu} 60 / 60 / 24 / p | dc}

touch $srsdir/_index
awk -F'	' \
	-v 'today='$today \
	-v 'item='$1 \
	-v 'scheduler=sm2' \
	'
	BEGIN {
		print scheduler > (ENVIRON["srsdir"]"/"item".log")
	}
	$2>=today {
		if(!done)
			print item "\t" today "\t" scheduler "\t" 0 "\t" 2.5
		print $0
		done=1
	}
	END {
		if(!done)
			print item "\t" today "\t" scheduler "\t" 0 "\t" 2.5
	}' \
 <$srsdir/_index >$srsdir/_index.new || exit $status
mv $srsdir/_index.new $srsdir/_index
